{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid" style="padding-top: 2%;">
        <div class="span2">
        </div>
        <div class="span4">
            <h3>
                All users
            </h3>
            <ul>
                {% for user in users %}
                    <li class="list-unstyled">
                        <a href="#" class="friend" data-friend-id="{{user.id}}">
                            {{ user.username ~ (user.activeNow ? ' (online)' : '')}}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="span4 chat-history">
        </div>
        <div class="span2">
        </div>
    </div>

    <div class="row-fluid" style="padding-top: 2%;">
        <div class="span6">
        </div>
        <div class="span4">
            <textarea style="width: 100%;" class="hide message-textarea">
                
            </textarea>
            <button class="btn message-send hide">Send</button>
            <input type="hidden" class="receiver" />
        </div>
        <div class="span2">
        </div>

    </div>
{% endblock %}


